<div class="container d-flex justify-content-center">
  <div class="col-lg-6 col-12 bg-white d-flex flex-column p-5">
    <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <label class="form-label">名前</label>
        <%= f.text_field :user_name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
      </div>
      <div class="form-group mt-5 mb-5">
        <label class="form-label">アイコン画像</label><br/>
        <%= f.file_field :user_icon%>
      </div>
      <%= f.submit '保存する', class: "btn btn-success" %>
    <% end %>
  </div>
</div>
