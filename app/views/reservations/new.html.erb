<div class="d-flex">
  <div class="d-flex flex-column col-6">
    <%= image_tag @hotel.hotel_image.url , size: '300x300'%>
    ホテル名<%= @hotel.name %>
    ホテル紹介<%= @hotel.hotel_introduction %>
    住所<%= @hotel.address %>
  </div>
  <div class="d-flex col-6 flex-column">
    <h2 class="fs-5 mb-3">料金　¥<%= @hotel.price %> / 日</h2>
    <%= form_with model:@reservation do |f| %>
      <div>
        <%= f.label :start ,"開始日" %>
        <%= f.date_field :start %>
      </div>
      <div>
        <%= f.label :end ,"終了日" %>
        <%= f.date_field :end %>
      </div>

      <div class="field mb-2">
        <%= f.label :NumberOfGuests, "人数" ,class:"text-muted"%><br/>
        <%= f.number_field :NumberOfGuests,class:"border rounded border-dark p-1"%>
      </div>


      <%= f.hidden_field :user_id, value: @user.id %>
      <%= f.hidden_field :hotel_id, value: @hotel.id %>

      <div class="actions box-login">
        <%= f.submit "上記の内容で予約を行う" ,class:"d-flex justify-content-center align-items-center col-3 mb-2"%>
      </div>
    <% end %>
  </div>

</div>
