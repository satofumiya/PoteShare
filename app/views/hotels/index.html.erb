<div class="d-flex flex-column justifiy-contents-center m-5">
  <h2>登録済みルーム一覧</h2>
  <table>
    <thead>
      <tr>
        <th>登録番号</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>住所</th>
      </tr>
    </thead>
    <tbody>
      <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.id %></td>
        <td><%= link_to hotel.name, new_reservation_path(id: hotel.id) %></td>
        <td><%= hotel.hotel_introduction %></td>
        <td><%= hotel.price %></td>
        <td><%= hotel.address %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
